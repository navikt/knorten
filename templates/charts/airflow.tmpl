{{ define "charts/airflow" }}
    {{ template "head" }}
    <div class="box container">
        <div id="content">
            {{ if .values }}
                <h2>Rediger {{ .team }} sin Airflow</h2>

                <form class="pure-form pure-form-stacked" action="delete" method="POST">
                    <fieldset>
                        <div class="pure-controls">
                            <button type="submit"
                                    onclick="return confirm('Er du sikker på at du vil slette airflow? Det er ikke mulig å gjenopprette denne senere')"
                                    class="pure-button button-error">
                                Slett Airflow
                            </button>
                        </div>
                    </fieldset>
                </form>
            {{ else }}
                <h2>Ny Airflow Notebook for {{ .team }}</h2>
            {{ end }}
            {{ with .errors }}
                {{ . }}
            {{ end }}

            <form class="pure-form pure-form-stacked" action="" method="POST">
                <fieldset>
                    <div class="pure-control-group">
                        <label for="dagrepo">DAG's repo</label>
                        <input type="text" name="dagrepo" id="dagrepo" value="{{ .values.DagRepo }}"
                               placeholder="navikt/dags" required/>
                    </div>
                    <div class="pure-control-group">
                        <label for="dagrepobranch">DAG's repo branch</label>
                        <input type="text" name="dagrepobranch" id="dagrepobranch" value="{{ .values.DagRepoBranch }}"
                               placeholder="main"/>
                    </div>
                    <div class="pure-control-group">
                        <label for="serviceuser">Servicebruker</label>
                        <input type="text" name="serviceuser" id="serviceuser" value="{{ .values.ServiceUser }}" />
                    </div>
                    <div style="display: flex">
                        Begrens trafikk fra airflow workere
                        <input id="restrictairflowegress" name="restrictairflowegress" type="checkbox"></input>
                        For mer informasjon, se <a style="cursor: pointer" target="_blank" href="https://docs.knada.io/analyse/airflow/knada-airflow/#trafikk-fra-airflow-workere">her</a>
                    </div>

                    <div class="pure-controls">
                        <button id="submit" type="submit" class="pure-button pure-button-primary">Lagre</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
    <script>
        function addElement() {
            const newDiv = document.createElement("div");
            newDiv.className = "pure-control-group"

            const label = document.createElement("label");
            label.setAttribute("for", "email");
            label.appendChild(document.createTextNode("Ny bruker"));

            const input = document.createElement("input");
            input.type = "email"
            input.name = "users[]"
            input.id = "email"
            input.placeholder = "E-post"

            const checkboxInput = document.createElement("input");
            checkboxInput.type = "checkbox"
            checkboxInput.name = "restrictairflowegress"
            checkboxInput.id = "restrictairflowegress"
            checkboxInput.value = "restrictairflowegress"
            innerDiv.appendChild(checkboxInput)

            // add the newly created element and its content into the DOM
            const currentDiv = document.getElementById("users");
            currentDiv.appendChild(input);
        }

        document.getElementById("restrictairflowegress").checked = {{ .restrictairflowegress }};
        document.getElementById("submit").disabled = {{ .pending_airflow }};
    </script>
    {{ template "footer" }}
{{ end }}
