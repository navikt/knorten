            <label for="machine_types" class="navds-form-field__label navds-label">Perioder hvor oppgraderinger av Airflow settes p√• pause</label>
            <div>
                {{ if .upgradesPausedPeriods }}
                <ul class="list-disc pl-6 gap-2">
                    {{ range .upgradesPausedPeriods }}
                    <li>Team <strong>{{ .Team }}</strong> - fra {{ .Name }}</li>
