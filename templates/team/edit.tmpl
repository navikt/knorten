{{ define "team/edit" }}
    {{ template "head" . }}
    <article class="bg-white rounded-md p-4">
        <div class="flex gap-4 items-center pb-4">
            <h2>Rediger {{ .team.Slug }}</h2>
            <form action="delete" method="POST">
                <fieldset>
                    <button type="submit"
                            onclick="return confirm('Er du sikker på at du vil slette {{ .team.Slug }}? Dette vil samtidig slette teamets Airflow (dersom det er satt opp). Det er ikke mulig å gjenopprette teamet.')"
                            class="navds-button navds-button--danger navds-button--small bg-surface-danger"
                    >
                                <span class="navds-label">
                                    Slett {{ .team.Slug }}
                                </span>
                    </button>
                </fieldset>
            </form>
        </div>

        {{ with .errors }}
            {{ . }}
        {{ end }}

        <form action="" method="POST" class="flex flex-col gap-4 w-80">
            <input type="text" name="team" id="team" value="{{ .team.Slug }}" readonly hidden/>
            <div class="">
                <label for="teamkatalogen_team" class="navds-form-field__label navds-label">Teamkatalogen-team</label>
                <select name="teamkatalogen_team" id="teamkatalogen_team" 
                        class="navds-select__input navds-body-short navds-body-medium"
                        required>
                    <option value="">Laster team...</option>
                </select>
                <div id="teamkatalogen_error" class="navds-error-message navds-label" style="display:none;"></div>
            </div>
            <fieldset id="users">
                <legend class="navds-form-field__label navds-label">Brukere</legend>
                <button type="button" class="mb-4 navds-button navds-button--secondary navds-button--small"
                        onClick="addElement()">
                    Legg til flere brukere
                </button>
            </fieldset>
            <fieldset class="flex gap-2 items-center">
                <button id="submit" type="submit" class="navds-button navds-button--primary bg-surface-action">
                        <span class="navds-label">
                            Lagre
                        </span>
                </button>
                <a href="/oversikt" class="navds-link">Avbryt</a>
            </fieldset>
        </form>
    </article>
    <script>
        {{ template "team/script" }}
        {{ range .team.Users }}
        addElement("{{ . }}")
        {{ end }}

        // Fetch teams from teamkatalogen-api
        (async function() {
            const selectElement = document.getElementById('teamkatalogen_team');
            const errorElement = document.getElementById('teamkatalogen_error');
            const currentTeam = "{{ .team.TeamkatalogenTeam }}";
            
            try {
                const response = await fetch('https://teamkatalog-api.intern.nav.no/team?status=ACTIVE');
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                const data = await response.json();
                const teams = data.content || [];
                
                // Sort teams by name
                teams.sort((a, b) => a.name.localeCompare(b.name));
                
                // Clear loading option
                selectElement.innerHTML = '<option value="">Velg team fra Teamkatalogen</option>';
                
                // Add team options
                teams.forEach(team => {
                    const option = document.createElement('option');
                    option.value = team.name;
                    option.textContent = team.name;
                    if (team.name === currentTeam) {
                        option.selected = true;
                    }
                    selectElement.appendChild(option);
                });
            } catch (error) {
                console.error('Failed to fetch teams from Teamkatalogen:', error);
                errorElement.textContent = 'Kunne ikke hente team fra Teamkatalogen. Prøv igjen senere.';
                errorElement.style.display = 'block';
                selectElement.innerHTML = '<option value="">Feil ved lasting av team</option>';
            }
        })();
    </script>
    {{ template "footer" }}
{{ end }}
