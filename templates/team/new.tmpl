{{ define "team/new" }}
    {{ template "head" . }}
    <article class="bg-white rounded-md p-4">
        <h2 class="pb-4">Nytt team</h2>
        {{ with .errors }}
            {{ . }}
        {{ end }}
        <form class="flex flex-col gap-4 w-80" action="" method="POST">
            <div class="">
                <label for="team" class="navds-form-field__label navds-label">Teamnavn</label>
                <input type="text" name="team" id="team" value="{{ or .team "" }}"
                       placeholder="Små bokstaver med bindestrek"
                       class="navds-text-field__input navds-body-short navds-body-medium"
                />
            </div>
            <div class="navds-checkbox navds-checkbox--medium">
                <input id="enableallowlist" name="enableallowlist" type="checkbox" class="navds-checkbox__input"/>
                <label for="enableallowlist" class="navds-checkbox__label">
                    <span class="navds-checkbox__content">Bruk allowlist for teamets tjenester</span>
                </label>
                <div class="navds-fieldset__description navds-body-long navds-body-long--small">
                    <a class="navds-link" target="_blank"
                        href="https://docs.knada.io/analyse/airflow/knada-airflow/#trafikk-fra-airflow-workere">
                        Les mer om allowlisting av trafikk fra knada-tjenester i dokumentasjonen vår
                    </a>
                </div>
            </div>
            <fieldset id="users">
                <legend class="navds-form-field__label navds-label">Brukere</legend>
                <button type="button" class="mb-4 navds-button navds-button--secondary navds-button--small"
                        onClick="addElement()">
                    Legg til flere brukere
                </button>
            </fieldset>

            <fieldset class="flex gap-2 items-center">
                <button id="submit" type="submit" class="navds-button navds-button--primary bg-surface-action">
                        <span class="navds-label">
                            Lagre
                        </span>
                </button>
                <a href="/oversikt" class="navds-link">Avbryt</a>
            </fieldset>
        </form>
    </article>
    <script>
        {{ template "team/script" }}
        {{ range .form.Users }}
        addElement("{{ . }}")
        {{ end }}
    </script>
    {{ template "footer" }}
{{ end }}
