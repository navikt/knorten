{{ define "team/new" }}
    {{ template "head" . }}
    <article class="bg-white rounded-md p-4">
        <h2 class="pb-4">Nytt team</h2>
        {{ with .errors }}
            {{ . }}
        {{ end }}
        <form class="flex flex-col gap-4 w-80" action="" method="POST">
            <div class="">
                <label for="team" class="navds-form-field__label navds-label">Teamnavn</label>
                <input type="text" name="team" id="team" value="{{ or .team "" }}"
                       placeholder="SmÃ¥ bokstaver med bindestrek"
                       class="navds-text-field__input navds-body-short navds-body-medium"
                />
            </div>
            <div class="">
                <label for="teamkatalogen_team" class="navds-form-field__label navds-label">Teamkatalogen-team</label>
                {{ if .teamkatalogTeams }}
                <select name="teamkatalogen_team" id="teamkatalogen_team" 
                        class="navds-select__input navds-body-short navds-body-medium"
                        required>
                    <option value="">Velg team fra Teamkatalogen</option>
                    {{ range .teamkatalogTeams }}
                        <option value="{{ .Name }}" {{ if eq $.form.TeamkatalogenTeam .Name }}selected{{ end }}>{{ .Name }}</option>
                    {{ end }}
                </select>
                {{ else }}
                <input type="text" name="teamkatalogen_team" id="teamkatalogen_team" 
                       value="{{ or .form.TeamkatalogenTeam "" }}"
                       placeholder="Skriv inn teamnavn"
                       class="navds-text-field__input navds-body-short navds-body-medium"
                       required
                />
                <div class="navds-body-short navds-form-field__description text-red-700">
                    Teamkatalogen er utilgjengelig. Skriv inn teamnavn manuelt.
                </div>
                {{ end }}
            </div>
            <fieldset id="users">
                <legend class="navds-form-field__label navds-label">Brukere</legend>
                <button type="button" class="mb-4 navds-button navds-button--secondary navds-button--small"
                        onClick="addElement()">
                    Legg til flere brukere
                </button>
            </fieldset>

            <fieldset class="flex gap-2 items-center">
                <button id="submit" type="submit" class="navds-button navds-button--primary bg-surface-action">
                        <span class="navds-label">
                            Lagre
                        </span>
                </button>
                <a href="/oversikt" class="navds-link">Avbryt</a>
            </fieldset>
        </form>
    </article>
    <script>
        {{ template "team/script" }}
        {{ range .form.Users }}
        addElement("{{ . }}")
        {{ end }}
    </script>
    {{ template "footer" }}
{{ end }}
