{{ define "team/script" }}
    function deleteRow() {
        const users = document.getElementById("users");
        users.removeChild(this.parentElement)
    }

    function addElement(user) {
        const target = document.getElementById("users");
        target.insertAdjacentHTML("beforeend",
            `<div class="flex gap-2 mb-2">
                <input 
                    class="navds-text-field__input navds-body-short navds-body-medium" 
                    type="email" 
                    name="users[]" 
                    id="email" 
                    value="${user ? user : ''}"
                    placeholder="E-post" 
                />
                <button onclick="deleteRow()" class="navds-button navds-button--secondary">
                    <span class="navds-label">Slett</span>
                </button>
            </div>` 
        );
    }
{{ end }}